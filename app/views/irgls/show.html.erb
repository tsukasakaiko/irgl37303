<div class="contents row">
  <div class="content_post" style="background-image: url(<%= @irgl.image %>);">
    <div class="more">
      <span><%= image_tag 'arrow_top.png' %></span>
      <ul class="more_list">
        <li>
          <%= link_to '編集', edit_irgl_path(@irgl.id), method: :get %>
        </li>
        <li>
          <%= link_to '削除', irgl_path(@irgl.id), method: :delete %>
        </li>
      </ul>
    </div>
    <p><%= @irgl.text %></p>
   <span class="name">
      <a href="/users/<%= @irgl.user.id %>">
        <span>投稿者</span><%= @irgl.user.nickname %>
      </a>
    </span>
  </div>
</div>
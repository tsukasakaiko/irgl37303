    <div class="content_post">
     <div class="more">
        <span><%= image_tag 'night.png' %></span>
        <ul class="more_list">
         <li>
            <%= link_to '詳細', irgl_path(irgl.id), method: :get %>
          </li>
           <% if user_signed_in? && current_user.id == irgl.user_id %>
         <li>
            <%= link_to '編集', edit_irgl_path(irgl.id), method: :get %>
          </li>
          <li>
            <%= link_to '削除', "/irgls/#{irgl.id}", method: :delete %>
          </li>
           <% end %>
        </ul>
      </div>
      <p><%= irgl.spot %></p>
      <p><%= irgl.ship_no %></p>
      <p><%= irgl.status %></p>
      <p><%= irgl.remarks %></p>
      <span class="name">
      <a href="">
          <span>投稿者</span><%= irgl.user.name %>
        </a>
      </span>
    </div>